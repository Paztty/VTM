<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options" 
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:core="clr-namespace:HVT.VTM.Base;assembly=HVT.VTM.Base"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        x:Class="VTM.MainWindow"
        mc:Ignorable="d"
    
    
        Loaded="Window_Loaded" Width="1920" Height="1080" WindowState="Maximized"
        Background="Black" SnapsToDevicePixels="True" WindowStyle="None" MaxHeight="1100" ResizeMode="CanResize"
        Closing="Window_Closing" KeyDown="Window_KeyDown" Title="Daeyoung-VTM System" BorderThickness="0" AllowsTransparency="True">
    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/css/VTM_StyleDictionary.xaml">
                </ResourceDictionary>
                <ResourceDictionary Source="/css/VTM_ControlTemplate.xaml">
                </ResourceDictionary>
                <ResourceDictionary Source="/css/VTM_Animations.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>

            <ObjectDataProvider x:Key="rxDataKindEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="core:RxDataKind"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ObjectDataProvider x:Key="rxDataTypeEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="core:RxDataType"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ObjectDataProvider x:Key="CommandsEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="core:CMDs"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>


            <ObjectDataProvider x:Key="ModeEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="core:Mode"/>
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="6">
        <Grid Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition Height="42"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Title-->
            <Grid x:Name="TittleBar" Margin="0" Grid.ColumnSpan="2" MouseDown="Window_MouseDown" >
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF3E3E3E" Offset="0.003"/>
                        <GradientStop Color="#FF222222" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="35"/>
                    <ColumnDefinition Width="35"/>
                </Grid.ColumnDefinitions>
                <DockPanel MouseDown="Window_MouseDown" >
                    <TextBlock Text="Daeyoung-VTM System" Foreground="MintCream" VerticalAlignment="Center" HorizontalAlignment="Left" FontWeight="Bold" FontSize="14" SnapsToDevicePixels="True" Margin="45,6,0,6" Width="157" >
                        <TextBlock.Effect>
                            <DropShadowEffect Color="LightGray" ShadowDepth ="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </DockPanel>
                <Image HorizontalAlignment="Left" Height="29" VerticalAlignment="Top" Width="32" Source="img/Logo.png" Margin="5,0,0,0" Stretch="UniformToFill" ClipToBounds="True">
                    <Image.Effect>
                        <DropShadowEffect Color="White" ShadowDepth="0"/>
                    </Image.Effect>
                    <Image.OpacityMask>
                        <ImageBrush ImageSource="img/Logo.png" Stretch="UniformToFill"/>
                    </Image.OpacityMask>
                </Image>
                <Button x:Name="btCloseWindow" Grid.Column="3" Click="btCloseWindow_Click" BorderThickness="0" FocusVisualStyle="{DynamicResource FocusControlNoneEffect}" Template="{DynamicResource ButtonControlNonHoverEffect}" Foreground="{x:Null}">
                    <Button.Effect>
                        <DropShadowEffect Color="#FFCDCDCD" ShadowDepth="2" Direction="270" Opacity="0.8"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="img/icon-Close.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <Button x:Name="btMaximizeWindow" Grid.Column="2" Click="btMaximizeWindow_Click" BorderThickness="0" FocusVisualStyle="{DynamicResource FocusControlNoneEffect}" Template="{DynamicResource ButtonControlNonHoverEffect}" Foreground="{x:Null}">
                    <Button.Effect>
                        <DropShadowEffect Color="#FFCDCDCD" ShadowDepth="2" Direction="270" Opacity="0.8"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="img/icon-maximized.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <Button x:Name="btMinimizeWindow" Grid.Column="1" Click="btMinimizeWindow_Click" BorderThickness="0" FocusVisualStyle="{DynamicResource FocusControlNoneEffect}" Template="{DynamicResource ButtonControlNonHoverEffect}" Foreground="{x:Null}">
                    <Button.Effect>
                        <DropShadowEffect Color="#FFCDCDCD" ShadowDepth="2" Direction="270" Opacity="0.8"/>
                    </Button.Effect>
                    <Button.Background>
                        <ImageBrush ImageSource="img/icon-minimized.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
            </Grid>

            <!--Navination-->
            <Grid x:Name="userNavinationPage" Grid.Row="1" Grid.RowSpan="1" Grid.ColumnSpan="2" Background="#FF3E3E3E" Margin="0,1,1,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="5,0,0,0">
                    <TextBlock Height="64" >
                        <TextBlock.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </TextBlock.Effect>
                        <TextBlock.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="img/companyLoge.png" />
                        </TextBlock.Background>
                    </TextBlock>
                    <Button x:Name="btOpenModel" Content="" Template="{DynamicResource ButtonControlNonHoverEffect}" Height="27" BorderThickness="0" FontWeight="Bold" Foreground="#FF109322" FontSize="14" ToolTip="OpenModel" Margin="0,15,0,20" Padding="5" Click="BtOpenModel_Click">
                        <Button.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="img/folder.png"/>
                        </Button.Background>
                        <Button.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </Button.Effect>
                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                    </Button>
                    <ToggleButton x:Name="btPageAuto"  Template="{StaticResource ToggleButtonLineHolder}" Click="btPanelControl_Switch"  Height="27" BorderThickness="0" FontWeight="Bold" Foreground="#FF109322" FontSize="14" ToolTip="Auto" Margin="0,
                                  0,0,0" Padding="0
                                  " Background="{x:Null}">

                        <ToggleButton.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </ToggleButton.Effect>
                        <ToggleButton.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </ToggleButton.BorderBrush>
                        <Image Source="img/laptop.png" Stretch="Uniform"/>
                    </ToggleButton>
                    <ToggleButton x:Name="btPageManual" Template="{StaticResource ToggleButtonLineHolder}" Click="btPanelControl_Switch"  Height="27" BorderThickness="0" FontWeight="Bold" Foreground="#FFDA1010" FontSize="14" Margin="0,15,0,0" Padding="0
                                  " ToolTip="Manual" Background="{x:Null}" >
                        <Image Source="img/manual.png" Stretch="Uniform" Height="25" Width="32"/>
                        <ToggleButton.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </ToggleButton.Effect>
                        <ToggleButton.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </ToggleButton.BorderBrush>
                    </ToggleButton>
                    <ToggleButton x:Name="btPageModel" Template="{StaticResource ToggleButtonLineHolder}" Click="btPanelControl_Switch" Height="27" BorderThickness="0" FontWeight="Bold" Foreground="#FF1B92BF" FontSize="14" Margin="0,15,0,0"  ToolTip="Model Edit" Background="{x:Null}" >
                        <Image Source="img/edit.png" Stretch="Uniform"/>
                        <ToggleButton.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </ToggleButton.Effect>
                        <ToggleButton.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </ToggleButton.BorderBrush>
                    </ToggleButton>
                    <ToggleButton x:Name="btPageVision" Template="{StaticResource ToggleButtonLineHolder}"  Click="btPanelControl_Switch"  Height="27" BorderThickness="0" FontWeight="Bold" Foreground="#FF1B92BF" FontSize="14" Margin="0,15,0,0" ToolTip="Model Edit" Background="{x:Null}" >
                        <Image  Stretch="Uniform" Source="img/Vision.png"/>
                        <ToggleButton.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </ToggleButton.Effect>
                        <ToggleButton.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </ToggleButton.BorderBrush>
                    </ToggleButton>
                    <Button x:Name="btPageLog" Height="27" Template="{StaticResource ButtonControlNonHoverEffect}" BorderThickness="0" FontWeight="Bold" Foreground="#FFCA1DD3" FontSize="14" Margin="0,15,0,0" ToolTip="Log data" Background="{x:Null}">
                        <Image Stretch="Uniform" Source=" img/database.png"/>
                        <Button.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </Button.Effect>
                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                    </Button>
                    <Button x:Name="btPageSetup" Template="{StaticResource ButtonControlNonHoverEffect}" Height="27" BorderThickness="0" FontWeight="Bold" Foreground="#FFB5E21B" FontSize="14" Margin="0,15,0,0" ToolTip="Setting" Background="{x:Null}">
                        <Image Stretch="Uniform" Source=" img/settings.png"/>
                        <Button.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="7"/>
                        </Button.Effect>
                        <Button.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform Angle="90" CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FF3E3E3E"/>
                                <GradientStop Color="White" Offset="0.525"/>
                                <GradientStop Color="#FF3E3E3E" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.BorderBrush>
                    </Button>
                </StackPanel>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.ColumnSpan="2" Margin="5"  >
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FF040404" Offset="1"/>
                                <GradientStop Color="#FF727070"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <TextBlock Text="MODEL" Foreground="#FF080283" TextDecorations="Underline" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Margin="15,0,0,0" HorizontalAlignment="Left">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="White"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="tbModelName" Text="VR9500T(185B)_PASS (E8A1_V32)" Foreground="White" TextDecorations="{x:Null}" FontSize="22" VerticalAlignment="Center" Margin="120,0,0,0" HorizontalAlignment="Left" FontStyle="Italic" FontWeight="Bold">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="White"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>

                    <!--Auto Grid page-->
                    <Grid x:Name ="AutoPanel" Grid.Row="1" Visibility="Visible" Margin="5" Background="#FF5D5D5D" d:IsHidden="True">
                        <Grid.Effect>
                            <DropShadowEffect/>
                        </Grid.Effect>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0"/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Background="Black" Margin="5">
                            <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5" Background="#3E4349" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="  Computer vision" Grid.Row="0" Foreground="#FFE8E8E8" FontStyle="Italic" FontWeight="Bold" Height="40" Padding="10" VerticalAlignment="Top" FontSize="18">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFFDFDFD" BlurRadius="10" ShadowDepth="0"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <Grid Background="#FF080808" Grid.Row="1" Margin="5">
                                    <!--gif:ImageBehavior.AnimatedSource="img/cameraloading.gif"-->

                                    <Grid.Effect>
                                        <DropShadowEffect Color="White" ShadowDepth="0"/>
                                    </Grid.Effect>

                                    <Image x:Name="cameraView" Source="img/PCB_Image_default.png" SourceUpdated="Image_SourceUpdated" HorizontalAlignment="Stretch" VerticalAlignment="Top" Stretch="Fill" MaxWidth="1000" MaxHeight="512"/>
                                    <Image x:Name="cameraload" Visibility="Hidden"/>
                                    <Canvas x:Name="atDisplayCanvas" Width="{Binding ElementName=cameraView, Path=ActualWidth}"
                                             Height="{Binding ElementName=cameraView, Path=ActualHeight}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                            ></Canvas>
                                </Grid>
                                <TextBlock Text="  Progress Informations" Grid.Row="2" Margin="0,0,0,0" Foreground="#FFE8E8E8" FontStyle="Italic" FontWeight="Bold" Height="40" Padding="10" VerticalAlignment="Top" FontSize="18">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFFDFDFD" BlurRadius="10" ShadowDepth="0"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <Button x:Name="btClearLog" Grid.Row="2" Template="{StaticResource ButtonElipse}" Width="100"
                                        Foreground="#FF0A0A0A" Content="Clear Log" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Margin="5,5,20,5" Click="btClearLog_Click" >
                                    <Button.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                            <GradientStop Color="#FF555555" Offset="0"/>
                                            <GradientStop Color="White" Offset="0.497"/>
                                            <GradientStop Color="#FF575555" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <RichTextBox x:Name="tbProgramLog" Grid.Row="3" Margin="5,5,5,10" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                                             Padding="10,0,0,0" VerticalAlignment="Stretch" Background="#FF212121" 
                                             FontFamily="Consolas" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="12" CaretBrush="#FFF9F9F9"
                                              >
                                    <RichTextBox.Resources>
                                        <Style TargetType="{x:Type Paragraph}">
                                            <Setter Property="Margin" Value="0"/>
                                        </Style>
                                    </RichTextBox.Resources>
                                </RichTextBox>
                            </Grid>
                        </Border>

                        <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="5" Background="#FF171717">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38"/>
                                <RowDefinition/>
                                <RowDefinition Height="155"/>
                            </Grid.RowDefinitions>
                            <DockPanel>
                                <Border CornerRadius="4,0,0,0" Background="#3E4349" HorizontalAlignment="Left" Width="118" Margin="5,3,0,0" Padding="1,1,1,0">
                                    <Border CornerRadius="4,0,0,0" Background="Cyan" HorizontalAlignment="Left" Width="115" Margin="2,2,0,0" Padding="0">
                                        <DockPanel Margin="0">
                                            <DockPanel.Effect>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="6"/>
                                            </DockPanel.Effect>
                                            <TextBlock Text="STATUS" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF555555" FontFamily="Stencil" Height="24" Width="95" Padding="0,0,0,0"/>
                                        </DockPanel>
                                    </Border>
                                </Border>
                                <Grid Margin="5" Width="781" HorizontalAlignment="Right">
                                    <Grid.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF171717" Offset="1"/>
                                            <GradientStop Color="Gray"/>
                                        </LinearGradientBrush>
                                    </Grid.Background>
                                    <DockPanel VerticalAlignment="Center" Height="Auto">
                                        <Image Source="img/infor.png" Height="18" Margin="10,0,5,0" Width="14" />
                                        <TextBlock Text="Fixture Infor." Foreground="#FFF0F0F0"/>
                                        <TextBlock Text="ID" Foreground="#FFF0F0F0" Margin="30,0,10,0"/>
                                        <TextBox Text="Fixture Infor." Foreground="Gainsboro" Width="159" BorderBrush="Black" Background="#FF4D4D4D" OpacityMask="White"/>
                                        <TextBlock Text="Use Count" Foreground="#FFF0F0F0" Margin="30,0,9.6,0"/>
                                        <TextBox Text="Fixture Infor." Foreground="Gainsboro" Width="139" BorderBrush="Black" Background="#FF4D4D4D" OpacityMask="White"/>
                                        <Border Margin="30,0,10,0" Background="#FFB9B9B9" >
                                            <TextBlock Text="None" Foreground="#FF272727" Margin="30,0,30,0"  HorizontalAlignment="Center"/>
                                        </Border>
                                    </DockPanel>
                                </Grid>
                            </DockPanel>

                            <Grid Grid.Row="1"  Background="#3E4349" Margin="5,0,5,5" Grid.RowSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="289"/>
                                </Grid.RowDefinitions>

                                <TabControl Margin="5,0"  Background="#FF43474D" BorderThickness="1" BorderBrush="#FF898F98">
                                    <TabControl.Effect>
                                        <DropShadowEffect ShadowDepth="3"/>
                                    </TabControl.Effect>
                                    <TabItem Background="#FF43474D" Foreground="#FFE8E8E8" FontFamily="Calibri" Template="{StaticResource TabVTMControl}">
                                        <TabItem.Header>
                                            <DockPanel Width="80" >
                                                <Image Source="img/clipboard.png" Width="23" Height="18" HorizontalAlignment="Left">
                                                    <Image.Effect>
                                                        <DropShadowEffect/>
                                                    </Image.Effect>
                                                </Image>
                                                <TextBlock Text="QR Code" VerticalAlignment="Center" Width="50"/>
                                            </DockPanel>
                                        </TabItem.Header>
                                        <Border Margin="1" BorderBrush="#898F98" BorderThickness="1">
                                            <Grid Background="#FF43474D"  >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="50"/>
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <Grid Margin="5,5,5,0" Background= "#2E3F3F" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="40"/>
                                                        <ColumnDefinition Width="160"/>
                                                        <ColumnDefinition Width="80"/>
                                                        <ColumnDefinition Width="0"/>
                                                        <ColumnDefinition Width="1*" x:Name="SiteA"/>
                                                        <ColumnDefinition Width="1*" x:Name="SiteB"/>
                                                        <ColumnDefinition Width="1*" x:Name="SiteC"/>
                                                        <ColumnDefinition Width="1*" x:Name="SiteD"/>
                                                        <ColumnDefinition Width="18"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Border Grid.Column="0" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="1,1,1,0">
                                                        <TextBlock  Text="No" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial"/>
                                                    </Border>
                                                    <Border Grid.Column="1" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                                        <TextBlock  Text="Code" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border Grid.Column="2" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                                        <TextBlock  Text="Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border Grid.Column="3" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                                        <TextBlock  Text="CMD" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Border Grid.Column="4" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0"/>
                                                    <Border Grid.Column="5" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
