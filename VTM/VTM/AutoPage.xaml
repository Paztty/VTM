<Page x:Class="VTM.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:swf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
      xmlns:local="clr-namespace:VTM"
      xmlns:properties="clr-namespace:VTM.Properties"
      mc:Ignorable="d"
      Title="AutoPage" Height="1032" Width="1800" Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/css/VTM_StyleDictionary.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid x:Name ="AutoPanel" Grid.Row="1" Visibility="Visible" Margin="5" Background="#FF5D5D5D">
        <Grid.Effect>
            <DropShadowEffect/>
        </Grid.Effect>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid x:Name="VisionPanel" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5" Background="#3E4349" >
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="  Computer vision" Grid.Row="0" Foreground="#FFE8E8E8" FontStyle="Italic" FontWeight="Bold" Height="40" Padding="10" VerticalAlignment="Top" FontSize="18">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FFFDFDFD" BlurRadius="10" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <Grid Background="#FF080808" Grid.Row="1" Margin="5">
                <Grid.Effect>
                    <DropShadowEffect Color="White" ShadowDepth="0"/>
                </Grid.Effect>
                <Image x:Name="cameraView" HorizontalAlignment="Stretch" VerticalAlignment="Top" Source="{Binding CameraImage}" Stretch="UniformToFill" Height="500"/>
            </Grid>
            <TextBlock Text="  Progress Informations" Grid.Row="2" Margin="0,0,0,0" Foreground="#FFE8E8E8" FontStyle="Italic" FontWeight="Bold" Height="40" Padding="10" VerticalAlignment="Top" FontSize="18">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FFFDFDFD" BlurRadius="10" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>
            <RichTextBox Name="tbProgramLog" Grid.Row="3" Margin="5,5,5,10" VerticalScrollBarVisibility="Auto" IsReadOnly="True" Foreground="#FFE8E8E8" Padding="10,0,0,10" VerticalAlignment="Stretch" Background="Black" FontFamily="Consolas" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="10"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="5" Background="#FF171717">
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition/>
                <RowDefinition Height="155"/>
            </Grid.RowDefinitions>
            <DockPanel>
                <Border CornerRadius="4,0,0,0" Background="#3E4349" HorizontalAlignment="Left" Width="118" Margin="5,3,0,0" Padding="1,1,1,0">
                    <Border CornerRadius="4,0,0,0" Background="Cyan" HorizontalAlignment="Left" Width="115" Margin="2,2,0,0" Padding="0">
                        <DockPanel Margin="0">
                            <DockPanel.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="6"/>
                            </DockPanel.Effect>
                            <TextBlock Text="STATUS" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF555555" FontFamily="Stencil" Height="24" Width="95" Padding="0,0,0,0">
                            </TextBlock>
                        </DockPanel>
                    </Border>
                </Border>
                <Grid Margin="3,5,3,3" Width="781" HorizontalAlignment="Right">
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF171717" Offset="1"/>
                            <GradientStop Color="Gray"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <DockPanel VerticalAlignment="Center" Height="Auto">
                        <Image Source="img/infor.png" Height="18" Margin="10,0,5,0" Width="14" />
                        <TextBlock Text="Fixture Infor." Foreground="#FFF0F0F0"/>
                        <TextBlock Text="ID" Foreground="#FFF0F0F0" Margin="30,0,10,0"/>
                        <TextBox Text="Fixture Infor." Foreground="Gainsboro" Width="159" BorderBrush="Black" Background="#FF4D4D4D" OpacityMask="White"/>
                        <TextBlock Text="Use Count" Foreground="#FFF0F0F0" Margin="30,0,9.6,0"/>
                        <TextBox Text="Fixture Infor." Foreground="Gainsboro" Width="139" BorderBrush="Black" Background="#FF4D4D4D" OpacityMask="White"/>
                        <Border Margin="30,0,10,0" Background="#FFB9B9B9" >
                            <TextBlock Text="None" Foreground="#FF272727" Margin="30,0,30,0"  HorizontalAlignment="Center"/>
                        </Border>
                    </DockPanel>
                </Grid>
            </DockPanel>

            <Grid Grid.Row="1"  Background="#3E4349" Margin="5,0,5,5" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="289"/>
                </Grid.RowDefinitions>
                <TabControl Margin="5,0"  Background="#FF43474D" BorderThickness="1" BorderBrush="#FF898F98">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#FF6C6969" CornerRadius="4,4,0,0" Margin="0,0,2,0" Background="#FF545659">
                                            <ContentPresenter x:Name="ContentSite"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            ContentSource="Header"
                                            Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF898F98" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="#FF43474D" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabControl.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </TabControl.Effect>
                    <TabItem Background="#FF43474D" Foreground="#FFE8E8E8" FontFamily="Calibri">
                        <TabItem.Header>
                            <DockPanel Width="59" >
                                <Image Source="img/clipboard.png" Width="23" Height="18" HorizontalAlignment="Left">
                                    <Image.Effect>
                                        <DropShadowEffect/>
                                    </Image.Effect>
                                </Image>
                                <TextBlock Text="IQMS" VerticalAlignment="Center" Width="29"/>
                            </DockPanel>
                        </TabItem.Header>
                        <Border Margin="1" BorderBrush="#898F98" BorderThickness="1">
                            <Grid Background="#FF43474D"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Margin="5,5,5,0" Background= "#2E3F3F" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="0"/>
                                        <ColumnDefinition Width="1*" x:Name="SiteA"/>
                                        <ColumnDefinition Width="1*" x:Name="SiteB"/>
                                        <ColumnDefinition Width="1*" x:Name="SiteC"/>
                                        <ColumnDefinition Width="1*" x:Name="SiteD"/>
                                        <ColumnDefinition Width="18"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Column="0" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="1,1,1,0">
                                        <TextBlock  Text="No" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial"/>
                                    </Border>
                                    <Border Grid.Column="1" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="Code" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="Content" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="3" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="CMD" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="4" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0"/>
                                    <Border Grid.Column="5" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="5" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console" VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="6" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console"/>
                                    </Border>
                                    <Border Grid.Column="6" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console" VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="7" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console"/>
                                    </Border>
                                    <Border Grid.Column="7" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console" VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="8" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console"/>
                                    </Border>
                                    <Border Grid.Column="8" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console"  VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="10" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1" Background="#2E3F3F">
                                        <Image Source="img/arrows.png" Margin="2" />
                                    </Border>
                                </Grid>
                                <DataGrid x:Name="QRcodesGrid" IsReadOnly="True" 
                                                          Grid.Row="1" Margin="5,0,5,5" Background="#FF202020"
                                                          AutoGenerateColumns="False" GridLinesVisibility="All"
                                                          SelectionMode="Single" HeadersVisibility="None"
                                                          Style="{StaticResource VTMDataGrid}"
                                                          ColumnHeaderStyle="{ StaticResource VTMDataGridHeader}" 
                                                          SelectionChanged="TestStepsGrid_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding Path=No, Mode=OneWay}"
                                                            Header="No" Width="39"
                                                             Foreground="#FFE8E8E8" CellStyle="{StaticResource VTMDataGridCellHeader}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=CMD, Mode=OneWay}"
                                                            Header="CMD" Width="40"
                                                             Foreground="#FFF7F71C" CellStyle="{StaticResource VTMDataGridCellConstan}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=Condition1, Mode=OneWay}"
                                                            Header="Condition" Width="100"
                                                            >
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="{x:Type DataGridCell}">
                                                    <Setter Property="Foreground" Value="WhiteSmoke"/>
                                                    <Setter Property="BorderBrush" Value="#6C6B6B"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,0"/>
                                                    <Setter Property="Background" Value="#03132C"/>
                                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="FontFamily" Value="Arial"/>
                                                            <Setter Property="FontSize" Value="12"/>
                                                            <Setter Property="TextBlock.Width" Value="1000"/>
                                                            <Setter Property="Margin" Value="-180,0,-1000,0"/>
                                                            <Setter Property="Padding" Value="10,5,0,0"/>
                                                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                                            <Setter Property="Background" Value="#202020"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Skip}" Value="True" >
                                                            <Setter Property="Background" Value="Gray"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsSelected" Value="True" >
                                                            <Setter Property="Background" Value="#3261AF"/>
                                                            <Setter Property="Foreground" Value="WhiteSmoke"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=Oper, Mode=OneWay}"
                                                            Header="Oper" Width="60"
                                                            >
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource VTMDataGridCellConstan}"  TargetType="{x:Type DataGridCell}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="TextBlock.Width" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=Min_Max , Mode=OneWay}"
                                                            Header="Min ~ Max" Width="80"
                                                            >
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource VTMDataGridCellConstan}"  TargetType="{x:Type DataGridCell}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="TextBlock.Width" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Binding="{Binding Path=ValueGet1, Mode=OneWay}"
                                                            Header="1" Width="1*"
                                                             Foreground="#FFE8E8E8">
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource VTMDataGridCellData}"  TargetType="{x:Type DataGridCell}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="TextBlock.Width" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=ValueGet2, Mode=OneWay}"
                                                            Header="1"  Width="1*"
                                                             Foreground="#FFD8D8D8">
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource VTMDataGridCellData}"  TargetType="{x:Type DataGridCell}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="TextBlock.Width" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=ValueGet3, Mode=OneWay}"
                                                            Header="3"  Width="1*"
                                                             Foreground="#FFD8D8D8">
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource VTMDataGridCellData}"  TargetType="{x:Type DataGridCell}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="TextBlock.Width" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=ValueGet4, Mode=OneWay}"
                                                            Header="4"  Width="1*"
                                                             Foreground="#FFD8D8D8">
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource VTMDataGridCellData}"  TargetType="{x:Type DataGridCell}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="TextBlock.Width" Value="0"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.CellStyle>
                                        </DataGridTextColumn>

                                    </DataGrid.Columns>
                                </DataGrid>


                            </Grid>
                        </Border>
                    </TabItem>
                    <TabItem Background="#FF43474D" Foreground="#FFE8E8E8" FontFamily="Calibri">
                        <TabItem.Header>
                            <DockPanel Width="Auto" >
                                <Image Source="img/listing.png" Width="23" Height="18" HorizontalAlignment="Left">
                                    <Image.Effect>
                                        <DropShadowEffect/>
                                    </Image.Effect>
                                </Image>
                                <TextBlock Text="Test Steps" VerticalAlignment="Center"/>
                            </DockPanel>
                        </TabItem.Header>
                        <Border Margin="1" BorderBrush="#898F98" BorderThickness="1">
                            <Grid x:Name="StepGridLayout" Background="#FF43474D" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Margin="5,5,5,0" Background= "#2E3F3F" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="1*" x:Name="Site1"/>
                                        <ColumnDefinition Width="1*" x:Name="Site2"/>
                                        <ColumnDefinition Width="1*" x:Name="Site3"/>
                                        <ColumnDefinition Width="1*" x:Name="Site4"/>
                                        <ColumnDefinition Width="18"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Column="0" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="1,1,1,0">
                                        <TextBlock  Text="No" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial"/>
                                    </Border>
                                    <Border Grid.Column="1" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="CMD" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="2" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="Conditions" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="3" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="Oper" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="4" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,0">
                                        <TextBlock  Text="Min - Max" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="5" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <Border Grid.Column="5" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox x:Name="WaitSite1" Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console" VerticalContentAlignment="Center" FontSize="13" Checked="WaitSite1_Checked" Unchecked="WaitSite1_Unchecked"/>
                                    </Border>
                                    <Border Grid.Column="6" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console"/>
                                    </Border>
                                    <Border Grid.Column="6" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console" VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="7" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console"/>
                                    </Border>
                                    <Border Grid.Column="7" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console" VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="8" Grid.RowSpan="1" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1">
                                        <TextBlock  Text="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console"/>
                                    </Border>
                                    <Border Grid.Column="8" Grid.Row="1" BorderBrush="#FF918C8C" BorderThickness="0,0,1,0" Background="#FF151515">
                                        <CheckBox  Content="Wait" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gainsboro" FontFamily="Lucida Console"  VerticalContentAlignment="Center" FontSize="13" />
                                    </Border>
                                    <Border Grid.Column="10" Grid.RowSpan="2" BorderBrush="#FF918C8C" BorderThickness="0,1,1,1" Background="#2E3F3F">
                                        <Image Source="img/arrows.png" Margin="2" />
                                    </Border>
                                </Grid>
                                <DataGrid x:Name="TestStepsGrid" IsReadOnly="True" 
                                                          Grid.Row="1" Margin="5,0,5,5" Background="#FF202020"
                                                          AutoGenerateColumns="False" GridLinesVisibility="All"
                                                          SelectionMode="Single" HeadersVisibility="None"
                                                          Style="{StaticResource VTMDataGrid}"
                                                          ColumnHeaderStyle="{ StaticResource VTMDataGridHeader}" 
                                                          SelectionChanged="TestStepsGrid_SelectionChanged">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding Path=No, Mode=OneWay}"
                                                            Header="No" Width="39"
                                                             Foreground="#FFE8E8E8" CellStyle="{StaticResource VTMDataGridCellHeader}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn x:Name="CMDcolumn" Binding="{Binding Path=CMD, Mode=OneWay}"
                                                            Header="CMD" Width="40"
                                                             Foreground="#FFF7F71C" CellStyle="{StaticResource VTMDataGridCellConstan}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Path=Condition1, Mode=OneWay}"
                                                            Header="Condition" Width="100"
                                                            >
                                            <DataGridTextColumn.CellStyle>
                                                <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="{x:Type DataGridCell}">
                                                    <Setter Property="Foreground" Value="WhiteSmoke"/>
                                                    <Setter Property="BorderBrush" Value="#6C6B6B"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,0"/>
                                                    <Setter Property="Background" Value="#03132C"/>
                                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CMD}" Value="MAK">
                                                            <Setter Property="FontFamily" Value="Arial"/>
                                                            <Setter Property="FontSize" Value="12"/>
                                                            <Setter Property="TextBlock.Width" Value="1000"/>
                                                            <Setter Property="Margin" Value="-180,0,-1000,0"/>
                                                            <Setter Property="Padding" Value="10,5,0,0"/>
                                                            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                                                            <Setter Property="Background" Value="#202020"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Skip}" Value="True" >
                                                            <Setter Property="Background" Value="Gray"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </DataTrigger>
                                                        <Trigger Property="IsSelected" Value="True" >
                                                            <Setter Property="Background" Value="#3261AF"/>
                                                            <Setter Property="Foreground" Value="WhiteSmoke"/>
                                                        </Trigger>
