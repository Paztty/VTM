<Page x:Class="VTM.ModelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
      xmlns:local="clr-namespace:VTM"
      mc:Ignorable="d" 
      Title="ModelPage" Height="1032" Width="1800" Background="Black" Loaded="Page_Loaded">


    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/css/VTM_StyleDictionary.xaml">
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid >
        <Border BorderThickness="0" BorderBrush="#FF898F98" Margin="5" Background="#FF3E3E3E" >
            <Grid Margin="5" Background="#FF040404">
                <DockPanel HorizontalAlignment="Right" VerticalAlignment="Top" Background="#3E3E3E" Height="38" Width="1000" Margin="0,0,5,5">
                    <TextBlock Text="Model file:" VerticalAlignment="Center" FontSize="22" TextDecorations="Underline" Margin="20,0,0,0" HorizontalAlignment="Left" Foreground="#FFD3FF3C" FontStyle="Italic" FontFamily="Arial" >
                        <TextBlock.Effect>
                            <DropShadowEffect Color="White" ShadowDepth="0" BlurRadius="8"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Grid Width="Auto" HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="tbModelName" Text="VR9500T(185B)_PASS (E8A1_V32)" Foreground="White" TextDecorations="{x:Null}" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left" FontStyle="Italic" FontWeight="Bold">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="White"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="tbModelNamePath" Grid.Row="1" Text="C:/CNS/VTM/VR9500T(185B)_PASS (E8A1_V32).project" Foreground="#FF13FFD4" TextDecorations="{x:Null}" VerticalAlignment="Center" Margin="10,0,0,0" HorizontalAlignment="Left" FontStyle="Italic">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="White"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                    <Grid HorizontalAlignment="Right" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="170"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Background="{x:Null}" Template="{StaticResource ButtonControlNonHoverEffect}" Width="Auto" Height="Auto" HorizontalAlignment="Center" BorderThickness="0" VerticalAlignment="Center">
                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Height="30" Margin="0,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Width="24" Height="20" Source="img/folder.png" Margin="15,0,0,0"  >
                                        <Image.Effect>
                                            <DropShadowEffect/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock Text="Open model" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </Button>
                        <Rectangle Grid.Column="1" Height="2" Width="36" RenderTransformOrigin="0.5,0.5">
                            <Rectangle.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Rectangle.RenderTransform>
                            <Rectangle.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="White" Offset="0"/>
                                    <GradientStop Color="#FF3E3E3E" Offset="1"/>
                                </RadialGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Button Grid.Column="2" Background="{x:Null}" Template="{StaticResource ButtonControlNonHoverEffect}"  Width="Auto" Height="Auto" HorizontalAlignment="Center" BorderThickness="0" VerticalAlignment="Center">
                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Height="30" Margin="0,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Image Width="24" Height="20" Source="img/save-folder.png" Margin="15,0,0,0"  >
                                        <Image.Effect>
                                            <DropShadowEffect/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock Text="Save model" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </Button>
                        <Button Grid.Column="3" Background="{x:Null}" Template="{StaticResource ButtonControlNonHoverEffect}"  Width="Auto" Height="Auto" HorizontalAlignment="Center" BorderThickness="0" VerticalAlignment="Center">
                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Height="30" Margin="0,0">
                                <Border.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0">
                                    <Image Width="24" Height="20" Source="img/save-as.png" Margin="15,0,0,0"  >
                                        <Image.Effect>
                                            <DropShadowEffect/>
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock Text="Save model as" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </DockPanel>
                            </Border>
                        </Button>
                    </Grid>


                </DockPanel>
                <TabControl Margin="0" Panel.ZIndex="-1" Background="#FF43474D" BorderThickness="1" BorderBrush="#FF898F98">
                    <TabControl.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Border x:Name="Border" BorderThickness="1,1,1,0" BorderBrush="#FF6C6969" CornerRadius="4,4,0,0" Margin="0,0,2,0" Background="#FF545659" Height="40">
                                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#FF898F98" />
                                                <Setter TargetName="Border" Property="Margin" Value="0,5,2,0" />
                                                <Setter TargetName="Border" Property="Height" Value="35" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="#FF43474D" />
                                                <Setter TargetName="Border" Property="Margin" Value="0,0,2,0" />
                                                <Setter TargetName="Border" Property="Height" Value="40" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>
                    <TabControl.Effect>
                        <DropShadowEffect ShadowDepth="3"/>
                    </TabControl.Effect>
                    <!--TEST TAP-->
                    <TabItem Background="#FF43474D" Foreground="#FFE8E8E8" FontFamily="Calibri">
                        <TabItem.Header>
                            <DockPanel Width="Auto" >
                                <Image Source="img/listing.png" Width="23" Height="20" HorizontalAlignment="Left">
                                    <Image.Effect>
                                        <DropShadowEffect/>
                                    </Image.Effect>
                                </Image>
                                <TextBlock Text="Test Steps" VerticalAlignment="Center"/>
                            </DockPanel>
                        </TabItem.Header>
                        <Border Margin="1" BorderBrush="#898F98" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="38"/>
                                    <RowDefinition Height="0.3*"/>
                                </Grid.RowDefinitions>

                                <!--" after load data -> disable readonly "-->
                                <DataGrid x:Name="TestStepsGrid" 
                                          IsReadOnly="False" AutoGenerateColumns="False" GridLinesVisibility="All"
                                          SelectionMode="Single"
                                          Style="{StaticResource VTMDataGrid}"
                                          ColumnHeaderStyle="{ StaticResource VTMDataGridHeader}" SelectionUnit="Cell">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Binding="{Binding No}"
                                                            Header="No" Width="39"
                                                            CellStyle="{StaticResource VTMDataGridCellHeader}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding IMQSCode}"
                                                            Header="IMQS Code" Width="60"
                                                            CellStyle="{StaticResource VTMDataGridCellHeader}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding TestContent}"
                                                            Header="Test Content" Width="200"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding CMD}"
                                                            Header="CMD" Width="60"
                                                            CellStyle="{StaticResource VTMDataGridCellCMD}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Condition1}"
                                                            Header="Condition 1" Width="200"
                                                            CellStyle="{StaticResource VTMDataGridCellCondition}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Oper}"
                                                            Header="Oper" Width="100"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Condition2}"
                                                            Header="Condition 2" Width="120"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Spect}"
                                                            Header="Spect" Width="100"
                                                            CellStyle="{StaticResource VTMDataGridCellSpect}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Min}"
                                                            Header="Min" Width="100"
                                                            CellStyle="{StaticResource VTMDataGridCellSpect}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Max}"
                                                            Header="Max" Width="100"
                                                            CellStyle="{StaticResource VTMDataGridCellSpect}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Mode}"
                                                            Header="Mode" Width="100"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Count}"
                                                            Header="Count" Width="80"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding E_Jump}"
                                                            Header="E-Jump" Width="50"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding Remark}"
                                                            Header="Remark" Width="*"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Binding="{Binding ELoc}"
                                                            Header="E-Loc" Width="40"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                        </DataGridTextColumn>
                                        <DataGridCheckBoxColumn Binding="{Binding Skip, Mode=TwoWay}" 
                                                            Header="Skip" Width="30">
                                            <DataGridCheckBoxColumn.CellStyle>
                                                <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="DataGridCell">
                                                    <Setter Property="Background" Value="Black"/>
                                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="Height" Value="21"/>
                                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                                    <Style.Triggers >
                                                        <Trigger Property="IsSelected" Value="True" >
                                                            <Setter Property="Background" Value="#FF03CFBC"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridCheckBoxColumn.CellStyle>
                                        </DataGridCheckBoxColumn>
                                    </DataGrid.Columns>
                                </DataGrid>


                                <DockPanel Background="#3E3E3E" Grid.Row="1" >
                                    <DockPanel.Effect>
                                        <DropShadowEffect/>
                                    </DockPanel.Effect>
                                    <Grid HorizontalAlignment="Right" Width="1298" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto" MinWidth="50"/>
                                            <ColumnDefinition Width="Auto" MinWidth="118"/>
                                            <ColumnDefinition Width="Auto" MinWidth="187"/>
                                            <ColumnDefinition Width="Auto" MinWidth="217"/>
                                            <ColumnDefinition Width="Auto" MinWidth="211"/>
                                            <ColumnDefinition Width="Auto" MinWidth="177"/>
                                            <ColumnDefinition Width="230"/>
                                        </Grid.ColumnDefinitions>
                                        <Button  Background="{x:Null}" Template="{StaticResource ButtonControlNonHoverEffect}" Width="140" Height="26" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center" Margin="0,6">
                                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Margin="10,0">
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Width="18" Source="img/filesetting.png" Margin="15,3,3,3" VerticalAlignment="Center"  >
                                                        <Image.Effect>
                                                            <DropShadowEffect/>
                                                        </Image.Effect>
                                                    </Image>
                                                    <TextBlock Text="Channel Edit" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DockPanel>
                                            </Border>
                                        </Button>
                                        <TextBlock Grid.Column="1"  Text="Find text" VerticalAlignment="Center" Margin="0,12,5,12" Height="14"/>
                                        <TextBox  Grid.Column="2" Height="18" Foreground="WhiteSmoke" VerticalAlignment="Center" Background="#FF252525" Margin="0,10,1,10" />
                                        <Button Grid.Column="3" Template="{StaticResource ButtonControlNonHoverEffect}" Background="{x:Null}" Width="187" Height="26" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center" Margin="0,6">
                                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Margin="10,0">
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Width="18" Source="img/insert.png" Margin="15,3,3,3" VerticalAlignment="Center"  >
                                                        <Image.Effect>
                                                            <DropShadowEffect/>
                                                        </Image.Effect>
                                                    </Image>
                                                    <TextBlock Text="Insert line (Ctrl + Ins)" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DockPanel>
                                            </Border>
                                        </Button>
                                        <Button Grid.Column="5" Template="{StaticResource ButtonControlNonHoverEffect}" Background="{x:Null}" Width="206" Height="26" HorizontalAlignment="Right" BorderThickness="0" VerticalAlignment="Center" Margin="0,6,5,6">
                                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Margin="10,0" HorizontalAlignment="Center">
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,0" Width="185">
                                                    <Image Width="18" Source="img/copy.png" Margin="15,3,3,3" VerticalAlignment="Center"  >
                                                        <Image.Effect>
                                                            <DropShadowEffect/>
                                                        </Image.Effect>
                                                    </Image>
                                                    <TextBlock Text="Copy selected (Ctrl + C)" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="118"/>
                                                </DockPanel>
                                            </Border>
                                        </Button>
                                        <Button Grid.Column="4" Template="{StaticResource ButtonControlNonHoverEffect}" Background="{x:Null}" Height="26" BorderThickness="0" VerticalAlignment="Center" Margin="5,6,10,6">
                                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="Auto" Margin="10,0">
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Image Width="18" Source="img/erase.png" Margin="15,3,3,3" VerticalAlignment="Center"  >
                                                        <Image.Effect>
                                                            <DropShadowEffect/>
                                                        </Image.Effect>
                                                    </Image>
                                                    <TextBlock Text="Delete line (Ctrl + Del)" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DockPanel>
                                            </Border>
                                        </Button>
                                        <Button Grid.Column="6" Template="{StaticResource ButtonControlNonHoverEffect}" Background="{x:Null}" Width="146" Height="26" HorizontalAlignment="Center" BorderThickness="0" VerticalAlignment="Center" Margin="16,6,15,6">
                                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="136">
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="136" Margin="-1,0">
                                                    <Image Width="17" Source="img/paste.png" Margin="15,3,3,3" VerticalAlignment="Center"  >
                                                        <Image.Effect>
                                                            <DropShadowEffect/>
                                                        </Image.Effect>
                                                    </Image>
                                                    <TextBlock Text="Paste (Ctrl + V)" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="78"/>
                                                </DockPanel>
                                            </Border>
                                        </Button>
                                        <Button Grid.Column="7" Template="{StaticResource ButtonControlNonHoverEffect}" Background="{x:Null}" Width="173" Height="26" HorizontalAlignment="Center" BorderThickness="0" VerticalAlignment="Center" Margin="15,6,42,6">
                                            <Border BorderThickness="1" BorderBrush="DarkGray" CornerRadius="20" Width="170" HorizontalAlignment="Center">
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FF2C2C2C" Offset="1"/>
                                                        <GradientStop Color="#FF616060" Offset="0.003"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-1,0" Width="172">
                                                    <Image Width="18" Source="img/overwrite.png" Margin="15,3,3,3" VerticalAlignment="Center"  >
                                                        <Image.Effect>
                                                            <DropShadowEffect/>
                                                        </Image.Effect>
                                                    </Image>
                                                    <TextBlock Text="Overwrite (Ctrt + D)" Foreground="#FFAAAAAA" Margin="5,0,15,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DockPanel>
                                            </Border>
                                        </Button>
                                    </Grid>
                                </DockPanel>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <DataGrid x:Name="TestStepsGridRemark" 
                                          IsReadOnly="True" 
                                          SelectionMode="Extended"
                                          MaxHeight="53" Margin="5"
                                          Style="{StaticResource VTMDataGrid}"
                                          ColumnHeaderStyle="{ StaticResource VTMDataGridHeader}"
                                          VerticalScrollBarVisibility="Disabled">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Binding="{Binding No}"
                                                            Header="No" Width="39"
                                                              Foreground="#FFE8E8E8"
                                                            CellStyle="{StaticResource VTMDataGridCellHeader}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding IMQSCode}"
                                                            Header="IMQS Code" Width="60"
                                                             
                                                            Foreground="#FFE8E8E8"
                                                            CellStyle="{StaticResource VTMDataGridCellHeader}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding TestContent}"
                                                            Header="Test Content" Width="200"
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding CMD}"
                                                            Header="CMD" Width="60"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellCMD}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Condition1}"
                                                            Header="Condition 1" Width="200"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Oper}"
                                                            Header="Oper" Width="100"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Condition2}"
                                                            Header="Condition 2" Width="120"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Spect}"
                                                            Header="Spect" Width="100"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Min}"
                                                            Header="Min" Width="100"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Max}"
                                                            Header="Max" Width="100"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Mode}"
                                                            Header="Mode" Width="100"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Count}"
                                                            Header="Count" Width="80"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding EJump}"
                                                            Header="E-Jump" Width="50"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding Remark}"
                                                            Header="Remark" Width="*"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridTextColumn Binding="{Binding ELoc}"
                                                            Header="E-Loc" Width="40"
                                                             
                                                            CellStyle="{StaticResource VTMDataGridCellData}">
                                            </DataGridTextColumn>
                                            <DataGridCheckBoxColumn Binding="{Binding Skip}"
                                                            Header="Skip" Width="30"
                                                             
                                                            >
                                                <DataGridCheckBoxColumn.CellStyle>
                                                    <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="DataGridCell">
                                                        <Setter Property="Background" Value="Black"/>
                                                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                                                        <Setter Property="Margin" Value="0"/>
                                                        <Setter Property="Height" Value="21"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers >
                                                            <Trigger Property="IsSelected" Value="True" >
                                                                <Setter Property="Background" Value="#FF03CFBC"/>
                                                                <Setter Property="Foreground" Value="Black"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </DataGridCheckBoxColumn.CellStyle>
                                            </DataGridCheckBoxColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <Border Grid.Row="1" Margin="5,0,5,5" BorderBrush="#FF0A0A0A" BorderThickness="1" >
                                        <TextBlock  Padding="5" TextWrapping="Wrap"
                                           Text="Remark Step" Background="#FF323F47" Foreground="White"
                                           />
                                    </Border>

                                </Grid>
                            </Grid>
                        </Border>
                    </TabItem>
                    <!-- Construction TAP-->
                    <TabItem Background="#3E3E3E" Foreground="#FFE8E8E8" FontFamily="Calibri">
                        <TabItem.Header>
                            <DockPanel Width="Auto" >
                                <Image Source="img/contruction.png" Width="23" Height="20" HorizontalAlignment="Left">
                                    <Image.Effect>
